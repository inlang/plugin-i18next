{
  "type": "module",
  "engines": {
    "node": "^18"
  },
  "scripts": {
    "dev": "concurrently --names build,test -c auto \"npm run dev:watch\" \"npm run dev:test\"",
    "dev:test": "vitest",
    "dev:watch": "DEV=true node ./build.js",
    "build": "node ./build.js && size-limit",
    "test": "vitest run"
  },
  "devDependencies": {
    "@inlang/core": "^0.7.8",
    "@size-limit/preset-app": "^8.2.4",
    "concurrently": "^7.6.0",
    "esbuild": "^0.17.10",
    "memfs": "^3.4.13",
    "size-limit": "^8.2.4",
    "typescript": "^4.9.5",
    "vitest": "^0.29.1"
  },
  "size-limit": [
    {
      "_COMMENT": "The lower the limit, the faster your plugin loads. If you can't reduce the size, feel free to increase the limit.",
      "limit": "200 ms",
      "path": "dist/*.js"
    }
  ]
}
